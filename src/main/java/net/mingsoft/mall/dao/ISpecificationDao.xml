<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace = "net.mingsoft.mall.dao.ISpecificationDao">
	<sql id="column_list">
		s.specification_name,
		s.specification_default_fields,
		s.specification_app_id
	</sql>
	<!-- 获取表字段开始 -->
	<resultMap type="net.mingsoft.mall.entity.SpecificationEntity" id="resultMap">
			<id column="specification_name" property="name" />	<!-- 与规格名绑定 -->
			<result column="specification_default_fields" property="defaultFields" />	<!-- 与字段义字段名称绑定-->
			<result column="specification_app_id" property="appId" />	<!-- 与appId绑定-->
	</resultMap>
	<!-- 获取表字段结束-->
	
	<!-- 增加产品规格开始 -->
	<insert id="saveEntity" useGeneratedKeys="true" keyProperty="name" parameterType="net.mingsoft.mall.entity.SpecificationEntity">
		insert mall_specification
		<!-- 添加表字段 -->
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test = "name != null">specification_name,</if>
			<if test = "defaultFields !=null">specification_default_fields,</if>
			<if test = "appId !=null">specification_app_id,</if>
		</trim>
		<!-- 注入控制层字段 -->
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test = "name != null">#{name},</if>
			<if test = "defaultFields !=null">#{defaultFields},</if>
			<if test = "appId !=null">#{appId},</if>
		</trim>
	</insert>
	<!-- 增加产品规格结束 -->
	
	<!-- 更新产品规格开始 -->
<!-- 	<update id="updateEntity" parameterType="com.mingsoft.base.entity.BaseEntity">
		update mall_specification
		<set>
			<if test="name != null">specification_name=#{name},</if>
			<if test="defaultFields != null">specification_default_fields=#{defaultFields},</if>
		</set>
		where  specification_name = #{name}
	</update> -->
	<!-- 更新产品规格结束 -->
	
	<!-- 根据ID查询开始 -->
	<select id="getEntity" resultMap="resultMap" parameterType="int">
		select 
		<include refid="column_list" />
		from mall_specification s where s.s_id = #{specId}
	</select>
	<!-- 根据ID查询结束-->
	
	<!-- 删除商品规格开始 -->
	<delete id="deleteEntity" parameterType="int">
		delete from mall_specification
		where
		s_id = #{specId}
	</delete>
	<!-- 删除商品规格结束 -->
	
	<!-- 查询所有数据 -->
	<select id="queryAll" resultMap="resultMap">
		select <include refid="column_list" /> from mall_specification s
	</select>
	
	
	<!-- 根据APPID获取规格列表(带分页)-->
	<select id="queryByAppId" resultMap="resultMap">
		select <include refid="column_list"/> from mall_specification s
		where 1=1
		<if test="appId != null">and s.specification_app_id = #{appId}</if>
		order by s.s_id desc
		<if test=" begin != null">
			limit #{begin}
		</if>
		<if test=" end != null">
			, #{end}
		</if>
	</select>
	
	<!-- 根据appId获得规格总数 -->
	<select id="countByAppId" resultType="int">
	 	select count(*) from mall_specification
	 	where 1=1
	 	<if test="appId != null">and specification_app_id = #{appId}</if>
	</select>
	
	<!-- 查找与某商品有关的规格 -->
	<select id="queryByProductId" resultMap="resultMap">
	 	select 
			ms.specification_name,
			ms.specification_default_fields,
			ms.specification_app_id
	 	from 
	 		mall_specification ms, 
	 		basic b, basic_category bc, 
	 		category c, 
	 		mall_product_specification mps
	 	where 1 = 1
		 	and b.BASIC_ID = bc.bc_basic_id
		 	and c.CATEGORY_ID = bc.bc_category_id 
		 	and b.BASIC_ID = #{productId}
		 	and mps.ps_spec_id = ms.s_id
		 	and mps.ps_product_id = b.BASIC_ID
		 group by ms.s_id
	</select>
</mapper>