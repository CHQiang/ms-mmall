<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!-- 管理员持久化层XML配置继承IRoleDao -->
<mapper namespace="com.mingsoft.freight.dao.IAreaDetailDao">

	<!-- 将实体属性与表字段对接开始 -->
	<resultMap id="resultMap" type="com.mingsoft.freight.entity.AreaDetailEntity">
		<id column="fad_id" property="fadId" />
		<result column="fad_area_id" property="fadAreaId" />
		<result column="fad_base_price" property="fadBasePrice" />
		<result column="fad_base_amount" property="fadBaseAmount" />
		<result column="fad_increase_price" property="fadIncreasePrice" />
		<result column="fad_increase_amount" property="fadIncreaseAmount" />
		<result column="fad_express_id" property="fadExpressId" />
		<result column="fad_enable" property="fadEnable" />
		<association property="fadExpress" column="fad_express_id" 
			javaType="com.mingsoft.basic.entity.CategoryEntity">
		  	<id property="categoryId" column="CATEGORY_ID"/>
		  	<result property="categoryTitle" column="CATEGORY_TITLE"/>
		</association>
	</resultMap>
	<!-- 将实体属性与表字段对接结束 -->
	<!-- 查询区域列表开始 -->
	<select id="queryFreightAreaDetail" resultMap="resultMap">
		SELECT c.CATEGORY_ID,c.CATEGORY_TITLE,
		fad.fad_area_id,fad.fad_express_id,fad.fad_base_price,fad.fad_base_amount,
		fad.fad_increase_price,fad.fad_increase_amount,fad.fad_enable
		FROM category c 
		LEFT JOIN freight_area_detail fad
		ON c.CATEGORY_ID = fad.fad_express_id and fad.fad_area_id = #{faId}
		WHERE c.CATEGORY_MODELID = #{modelId} AND c.category_del=0 
	</select>
	<!-- 查询区域列表结束 -->
	
	<!-- 新增区域开始 -->
	<insert id="saveEntity" useGeneratedKeys="true" keyProperty="faId"
	parameterType="com.mingsoft.freight.entity.AreaDetailEntity">
		INSERT INTO freight_area_detail
		<!-- 添加表字段 -->
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="fadAreaId != null">fad_area_id,</if>
			<if test="fadBasePrice != null">fad_base_price,</if>
			<if test="fadBaseAmount != null">fad_base_amount,</if>
			<if test="fadIncreasePrice != null">fad_increase_price,</if>
			<if test="fadIncreaseAmount != null">fad_increase_amount,</if>
			<if test="fadExpressId != null">fad_express_id,</if>
			<if test="fadEnable != null">fad_enable,</if>
		</trim>
		<!-- 注入控制层字段 -->
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="fadAreaId != null">#{fadAreaId},</if>
			<if test="fadBasePrice != null">#{fadBasePrice},</if>
			<if test="fadBaseAmount != null">#{fadBaseAmount},</if>
			<if test="fadIncreasePrice != null">#{fadIncreasePrice},</if>
			<if test="fadIncreaseAmount != null">#{fadIncreaseAmount},</if>
			<if test="fadExpressId != null">#{fadExpressId},</if>
			<if test="fadEnable != null">#{fadEnable},</if>
		</trim>	
	</insert>
	<!-- 新增区域结束 -->
	
	<!-- 查询区域开始 -->
	<select id="getByEntity" resultMap="resultMap" 
	parameterType="com.mingsoft.freight.entity.AreaDetailEntity">
		SELECT * FROM freight_area_detail 
		WHERE fad_area_id=#{fadAreaId} AND fad_express_id=#{fadExpressId}
	</select>
	<!-- 查询区域结束 -->
	
	<!-- 更新区域开始 -->
	<update id="updateEntity" parameterType="com.mingsoft.freight.entity.AreaDetailEntity">
		update freight_area_detail
		<set>
			<if test="fadBasePrice != null">fad_base_price=#{fadBasePrice},</if>
			<if test="fadBaseAmount != null">fad_base_amount=#{fadBaseAmount},</if>
			<if test="fadIncreasePrice != null">fad_increase_price=#{fadIncreasePrice},</if>
			<if test="fadIncreaseAmount != null">fad_increase_amount=#{fadIncreaseAmount},</if>
			<if test="fadEnable != null">fad_enable=#{fadEnable},</if>
		</set>
		where fad_area_id = #{fadAreaId} and fad_express_id=#{fadExpressId}
	</update>
	<!-- 更新区域结束 -->
	
	<!-- 删除区域开始 -->
	<delete id="delete" >
		delete from freight_area_detail where fad_area_id in
	  	<foreach item="areaId" index="index" collection="ids"
	      	open="(" separator="," close=")">
	        	#{areaId}
	  	</foreach>
	</delete>
	<!-- 删除区域结束 -->
</mapper>