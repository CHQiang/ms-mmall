<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!-- 管理员持久化层XML配置继承IRoleDao -->
<mapper namespace="com.mingsoft.freight.dao.IFreightAreaDao">

	<!-- 将实体属性与表字段对接开始 -->
	<resultMap id="resultMap" type="com.mingsoft.freight.entity.FreightAreaEntity">
		<id column="fa_id" property="faId" />
		<result column="fa_title" property="faTitle" />
		<result column="fa_city_ids" property="faCityIds" />
	</resultMap>
	<!-- 将实体属性与表字段对接结束 -->
	<!-- 查询区域列表开始 -->
	<select id="queryAllArea" resultMap="resultMap">
		select * from freight_area
	</select>
	<!-- 查询区域列表结束 -->
	
	<!-- 新增区域开始 -->
	<insert id="saveAreaEntity" useGeneratedKeys="true" keyProperty="faId"
		parameterType="com.mingsoft.freight.entity.FreightAreaEntity">
		
		insert into freight_area(fa_title,fa_city_ids) values (#{faTitle},#{faCityIds})
		
	</insert>
	<!-- 新增区域结束 -->
	
	<!-- 查询区域开始 -->
	<select id="getAreaEntity" resultMap="resultMap" 
	parameterType="com.mingsoft.freight.entity.FreightAreaEntity">
		select * from freight_area
		<where> 
			<if test=" faTitle != null ">and fa_title= #{faTitle}</if>
			<if test=" faCityIds != null ">and fa_city_ids= #{faCityIds}</if>
		</where>
	</select>
	<!-- 查询区域结束 -->
	
	<!-- 更新区域开始 -->
	<update id="updateEntity" parameterType="com.mingsoft.freight.entity.FreightAreaEntity">
		update user set people_password = #{peoplePassword}	where people_name = #{peopleName}
	</update>
	<!-- 更新区域结束 -->
	
	<!-- 删除区域开始 -->
	<delete id="delete" >
		delete from freight_area where fa_id in
	  	<foreach item="faId" index="index" collection="faIdsArr"
	      	open="(" separator="," close=")">
	        	#{faId}
	  	</foreach>
	</delete>
	<!-- 删除区域结束 -->
</mapper>